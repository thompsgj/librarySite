{{#section 'css'}}
	<style>
		html, body {
			background-color: blue;
			margin:0px;
			padding: 0px;
			height:100%;
		}

		#container {
			width: 800px;
			height: 100%;
			margin: auto;
		}

		#navbar {
			background-color: orange;
			float: left;
			padding: 0px;
			margin: 0px;
			height: 100%;
			width: 160px;
		}

		#main {
			background-color: purple;
			float: right;
			width: 640px;
			height: 100%;
		}

		ul {
			list-style: none;
			margin-left: 25px;
			padding: 0px;
		}

		li {
			margin-top: 10px;
			margin-bottom: 10px;
		}

	</style>
{{/section}}
<!--<h1>ILER Library</h1>-->
<div id="container">
	<div id="navbar">
		<ul>
		<li>
			<a href="#" id="users" onclick="url2div(this.id, 'main')">USERS</a>
		</li>
		<li>
			<a href="#" id="addinv" onclick="url2div(this.id, 'main')">ADD BOOK</a>
		</li>
		<li>
			<a href="#" id="inventory" onclick="url2div(this.id, 'main')">UPDATE BOOK</a>
		</li>
		<li>
			<a href="#" id="checkouts" onclick="url2div(this.id, 'main')">CHECKOUTS</a>
		</li>
		<li>
			<a href="#" id="returns" onclick="url2div(this.id, 'main')">RETURNS</a>
		</li>
		<li>
			<a href="#" id="analytics" onclick="url2div(this.id, 'main')">ANALYTICS</a>
		</li>
		</ul>
	</div>
	<div id="main"></div>
</div>

{{#section 'jcode'}}
function url2div(url, target) {
    document.getElementById(target).innerHTML = '<iframe style="width:100%;height:100%;" frameborder="0" src="' + url + '" />';
}
{{/section}}