Test Query
db.bookcollection.insert({"title": "Dune", "author": "Frank Herbert", "publisher": "Tor", "series": "Dune Series", "level": {"ILER":8,"Former":"A"},"numbers": [{"copy": 1, "book": 14,"ISBN": 123345678},{"copy": 2, "book": 2,"ISBN": 123345678}], "attributes": {"headwords": 2000, "type": "Non-graded", "genre":"Sci-Fi", "CD": "No",},"availability": {"total":7,"checkouts":0}})

DB Schematics
book collection schema
{
	"title": "string",
	"author": "string",
	"publisher": "string",
	"series": "string",
	"level": {
		"ILER":int,
		"Former":int
	},
	"numbers": [
		{"copy": int, book": int,"ISBN": int},
		{"copy": int, book": int,"ISBN": int},
		{"copy": int, book": int,"ISBN": int},
		{"copy": int, book": int,"ISBN": int},
	],
	"attributes": {
		"headwords": int,
		"type": "string",
		"genre":"string",
		"CD": "string",
	},
	"availability": {
		"total":int,
		"checkouts":int
	}
}


usercollection scheme
{
	"name": "studentName",
	"idnumber": "studentID",
	"phone": "cellPhoneNumber",
	"email": "studentEmail",
	"currentCheckouts": "numberOfCurrentBooksOnLoan",
	"totalCheckouts": "lifetimeOfBookCheckouts"
}

checkoutcollection scheme
{
	"name":"studentName",
	"titles": [
		"bookTitle",
		"bookTitle",
		"as necessary....."
	]
}



